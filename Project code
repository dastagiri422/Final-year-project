Adafruit_ADXL345_Unified accel = Adafruit_ADXL345_Unified(12345);

const int hbpin = A0;
const int lm35=A1;
const int buzz=7;
int hcount = 0,hbval=0;
char res[130];
void upload1(unsigned char *chr,unsigned char *chr1);
void serialFlush(){
  while(Serial.available() > 0) {
    char t = Serial.read();
  }  
} 

char check(char* ex,int timeout)
{
  int i=0;
  int j = 0,k=0;
  while (1)
  {
    sl:
    if(Serial.available() > 0)
    {
      res[i] = Serial.read();
      if(res[i] == 0x0a || res[i]=='>' || i == 100)
      {
        i++;
        res[i] = 0;break;
      }
      i++;
    }
    j++;
    if(j == 30000)
    {
      k++;
      //Serial.println("kk");
      j = 0;  
    }
    if(k > timeout)
    {
     // Serial.println("timeout");
      return 1;
     }
  }//while 1
  if(!strncmp(ex,res,strlen(ex)))
  {
    //Serial.println("ok..");
    return 0;
   }
  else
  {
   // Serial.print("Wrong  ");
   // Serial.println(res);
    i=0;
    goto sl;
   }
} 
char buff[200],k=0;
